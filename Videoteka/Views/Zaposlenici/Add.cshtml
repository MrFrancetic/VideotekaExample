@model Videoteka.Models.AddZaposlenikViewModel
@{
}
<!--Ovo ce biti stranica za dodavanje novog zaposlenika-->
<form method="post" action="Add"><!--Post metoda se koristi za slanje podataka serveru kako bi se kreiralo ili azuriralo-->
  <h3>Dodaj zaposlenika</h3>
  <div class="mb-3">
    <label for="" class="form-label">Ime zaposlenika</label>
    <input type="text" class="form-control" asp-for="ImeZaposlenika" required oninvalid="this.setCustomValidity('Unesite Ime zaposlenika')"> 
  </div>
    <div class="mb-3">
        
        <label for="" class="form-label">Prezime zaposlenika</label>
        <input type="text" class="form-control" asp-for="PrezimeZaposlenika" required oninvalid="this.setCustomValidity('Unesite Prezime zaposlenika')">
        <!--U input type se stavio required oninvalid="this.setCustomValidity('Unesite ime/prezime zaposlenika')" kako bi se sprijecilo prazan unos bazu podataka i da
            sprijeci administratora od praznog unosa
        -->
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Broj Telefona zaposlenika</label>
        <input type="text" class="form-control" asp-for="BrojTelZaposlenika">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">E-mail zaposlenika</label>
        <input type="text" class="form-control" asp-for="EmailZaposlenika">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Pozicija zaposlenika</label>
        <input type="text" class="form-control" asp-for="PozicijaZaposlenika">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Plaća zaposlenika</label>
        <input type="number" class="form-control" asp-for="PlacaZaposlenika">
    </div>
      <div class="mb-3">
    <label for="" class="form-label">Datum zaposlenja</label>
    <input type="date" class="form-control" asp-for="DatumZaposlenja" required oninvalid="this.setCustomValidity('Odaberite datum zaposlenja zaposlenika')"> 
  </div>
    <div class="mb-3">
        <label for="" class="form-label">Datum rođenja</label>
        <input type="date" class="form-control" asp-for="DatumRodenja">
    </div>
 
  <button type="submit" class="btn btn-primary">Spremi</button>
</form>